    div.w-100
        div.row.border-bottom.bd-system.pb-2
            div.cell-6
                div.text-bold.text-center
                    div.reduce-3 CHAIN ID
                    div.text-leader2.text-bold.value#chain_id 0
            div.cell-6.border-left.bd-system
                div.text-bold.text-center
                    div.reduce-3 EPOCH
                    div.text-leader2.text-bold.value#epoch 0


        table.table.subcompact.cell-border.mt-4
            tr
                td API Version
                td.text-right.value
                    span#api_version v0
            tr
                td Version
                td.text-right.value
                    span#ledger_version 0
            tr
                td Timestamp
                td.text-right.value
                    span#ledger_timestamp DD/MM/YYYY HH:mm:ss
            tr
                td Node Host
                td.text-right.value
                    span#node_host Unknown

        div.mt-4
            div.text-leader.text-center
                span#node_health health unknown