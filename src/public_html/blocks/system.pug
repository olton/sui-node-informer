div( data-role="panel" data-title-caption="SYSTEM INFO" )
    div.w-100
        div.row.border-bottom.bd-system.pb-2
            div.cell-6
                div.text-bold.text-center
                    div.reduce-3 CPU CORES
                    div.text-leader.text-bold.value#system_physical_core_count 0
            div.cell-6.border-left.bd-system
                div.text-bold.text-center
                    div.reduce-3 MEMORY
                    div.text-leader.text-bold.value#system_total_memory 0


        div.mt-4
            div.text-bold.text-center.mb-2
                div.reduce-3 USING MEMORY

            div.border.bd-system(style="height: 80px;")#memory-usage-chart

            div.text-bold.text-center.row
                div.cell-6.value#memory-usage 0%
                div.cell-6.value#memory-usage-val 0